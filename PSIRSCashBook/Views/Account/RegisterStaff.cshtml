                                                            <div class="col-md-12 text-center">
                                                                <input type="submit" id="btnsubmit" value="Add Staff" class="btn btn-primary">
                                                            </div>
                                                        </div>
                                                        <!-- /.Fifth row -->
                                                    </form>
                                                    <!-- Edit Form -->
                                                </div>
                                                <!--/.Card content-->
                                            </div>
                                        </div>
                                        <!--/.Card-->
                                    </div>
                                    <!-- /.Second column -->
                                </div>
                                <!-- /.First row -->
                            </section>
