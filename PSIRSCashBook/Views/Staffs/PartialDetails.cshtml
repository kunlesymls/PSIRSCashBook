@model PSIRSCashBook.Models.Staff

<div class="mt-1 mb-1">
    <img src="@Url.Action("RenderImage", new { studentId = Model.StaffId})" alt="" class="img-fluid rounded-circle contact-avatar mx-auto">
</div>

<h3 class="h3-responsive text-center">@Model.FullName</h3>
@if (Model.IsActiveStaff)
{
    <p class="text-center grey-text">Active Staff</p>
}
else
{
    <p class="text-center grey-text">In-active Staff</p>
}
<ul class="striped">
    <li><strong>State of Origin: </strong> @Model.StateOfOrigin</li>
    <li><strong>Age: </strong> @Model.Age</li>
    <li><strong>Email: </strong> @Model.Email</li>
    <li><strong>Phone Number:</strong> @Model.PhoneNumber</li>
    <li><strong>Religion: </strong> @Model.Religion</li>
    <li><strong>Marital Status: </strong> @Model.MaritalStatus</li>
</ul>

@Html.ActionLink("Check Full Details", "Details", new { id = Model.StaffId }, new { @class = "btn btn-primary" })